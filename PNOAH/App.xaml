<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PNOAH.App">
    <Application.Resources>
        
          <!-- Pallete -->
            <Color x:Key="primary-color-dark">#FAFAFA</Color>
            <Color x:Key="primary-color-light">#FFFFFF</Color>

            <Color x:Key="secondary-color">#B4B4B4</Color>

            <Color x:Key="accent-color">#1A1A1A</Color>
            <Color x:Key="primary-text-color">#212121</Color>
        
       
        
        <Style ApplyToDerivedTypes="true" TargetType="TabbedPage">
            <Setter Property="BarBackgroundColor" Value="{StaticResource Key=primary-color-dark}"/>
            <Setter Property="BarTextColor" Value="{StaticResource Key=accent-color}"/>
        </Style>
        
        <Style ApplyToDerivedTypes="true" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#F50E45"/>
            <Setter Property="BorderWidth" Value="1"/>
            <Setter Property="BorderRadius" Value="10"/>
            <Setter Property="BorderColor" Value="#F50E45"/>
            <Setter Property="TextColor" Value="#FFFFFF"/>
        </Style>
        
        <Style ApplyToDerivedTypes="true" TargetType="ContentPage">
            <Setter Property="BackgroundColor" Value="{StaticResource Key=primary-color-light}"/>
        </Style>
        
    </Application.Resources>
</Application>